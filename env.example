# Database Configuration
DATABASE_URL=postgresql://postgres:dealeriq@localhost:5432/vehicle_management

# Environment
NODE_ENV=development

# JWT Secret (for authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret (for OAuth)
SESSION_SECRET=your-session-secret-key-here

# Server Configuration
PORT=3000

# Frontend URL (common development ports: 5173 for Vite, 8080 for other dev servers)
FRONTEND_URL=http://localhost:8080

# Backend URL (for OAuth callbacks)
BACKEND_URL=http://localhost:3000

# Social Authentication
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# D.A.I.V.E. AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Speech-to-Text Configuration (Optional - for voice input)
# WHISPER_API_KEY=your-whisper-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key

# Text-to-Speech Configuration (Optional - for voice output)
# ELEVENLABS_API_KEY=your-elevenlabs-api-key
# AZURE_SPEECH_KEY=your-azure-speech-key
# AZURE_SPEECH_REGION=your-azure-speech-region

# Optional: SSL Configuration for Production
# SSL_MODE=require

# QR Code Encryption
QR_ENCRYPTION_KEY=your-qr-encryption-key-here 